<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/tv_access_request_no"
                style="@style/content_style"
                android:layout_width="0dp"
                android:fontFamily="@font/museosans_300"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="Access Request No."
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_request_on"
                style="@style/content_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/museosans_300"
                android:background="@drawable/border"
                android:text="Request On" />

            <TextView
                android:id="@+id/tv_access_for"
                style="@style/content_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/museosans_300"
                android:background="@drawable/border"
                android:text="Access For" />

            <!--<TextView-->
            <!--android:id="@+id/tv_request_type"-->
            <!--style="@style/content_style"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/border"-->
            <!--android:text="Request Type" />-->

            <TextView
                android:id="@+id/tv_Approval_status"
                style="@style/content_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/museosans_300"
                android:background="@drawable/border"
                android:text="Approval Status" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/red"
                    android:text="View Details"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>


        </TableRow>

    </TableLayout>


</LinearLayout>