<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/birds"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:background="@color/translucent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                layout="@layout/progressbar_layout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="?android:attr/actionBarSize" />


            <TextView
                android:fontFamily="@font/museosans_500"
                android:id="@+id/drop_ur_suggestion"
                android:text="Drop Your Suggestion :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <EditText
                android:fontFamily="@font/museosans_300"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/drop_suggestion"
                android:hint="Enter your Suggestion"
                android:gravity="left|top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:padding="5dp"
                android:textColor="@color/black"
                android:maxLines="10"
                android:background="@drawable/cardview_bg"
                android:layout_below="@+id/drop_ur_suggestion" />

            <TextView
                android:fontFamily="@font/museosans_500"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/drop_suggestion"
                android:layout_toLeftOf="@+id/addAttachment"
                android:id="@+id/add_attach"
                android:layout_marginRight="10dp"
                android:text="Add attachment"
                android:layout_alignBottom="@+id/attachment"
                android:layout_alignTop="@+id/attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/doc_view"
                android:layout_below="@+id/drop_suggestion"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_margin="5dp" />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/drop_suggestion"
                android:layout_alignParentRight="true"
                android:id="@+id/addAttachment"
                android:src="@drawable/attach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="@font/museosans_500"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/doc_view"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:text="Expected Cost Saving/Reduction (Rs) :"
                android:layout_height="wrap_content"
                android:id="@+id/expected_cost_saving_txt" />

            <EditText
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expected_cost_saving"
                android:layout_below="@+id/expected_cost_saving_txt"
                android:hint="Enter cost benefit Amount"
                android:padding="5dp"
                android:background="@drawable/cardview_bg" />

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_500"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/expected_cost_saving"
                android:layout_width="wrap_content"
                android:text="Other Benefit :"
                android:layout_height="wrap_content"
                android:id="@+id/other_benefit_txt" />

            <EditText
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:padding="5dp"
                android:background="@drawable/cardview_bg"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/othr_ben"
                android:layout_below="@+id/other_benefit_txt"
                android:hint="Enter other benefit" />

            <Button
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/submit"
                android:fontFamily="@font/museosans_500"
                android:text="Submit"
                android:textColor="#ffffff"
                android:background="@drawable/btn_bg"
                android:layout_below="@+id/othr_ben"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>