<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    >
    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cvp"
        android:layout_marginTop="?attr/actionBarSize"
        android:text="Customer Visit Portal-Plan"
        />

    <TextView
        android:layout_below="@+id/cvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cvp_viewCalendar"
        android:layout_marginTop="?attr/actionBarSize"
        android:text="Customer Visit Portal-View"
        />
    <TextView
        android:layout_below="@+id/cvp_viewCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_visit_report"
        android:layout_marginTop="?attr/actionBarSize"
        android:text="Create Visit Report"
        />


</RelativeLayout>