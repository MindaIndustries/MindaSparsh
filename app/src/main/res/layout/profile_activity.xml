<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    >

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/birds"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:background="@color/translucent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textSize="15sp"
                android:fontFamily="@font/museosans_500" />


            <TextView
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:text="--"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:fontFamily="@font/museosans_300" />

            <TextView
                android:layout_below="@+id/first_name"
                android:textColor="@color/black"
                android:id="@+id/email"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textSize="15sp"
                android:fontFamily="@font/museosans_500" />


            <TextView
                android:id="@+id/email_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="--"
                android:textSize="13sp"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:fontFamily="@font/museosans_300" />

            <TextView
                android:gravity="left"
                android:layout_below="@+id/email_value"
                android:textColor="@color/black"
                android:id="@+id/emp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EmpCode :"
                android:layout_toStartOf="@+id/view"
                android:fontFamily="@font/museosans_500" />


            <TextView
                android:id="@+id/emp_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="--"
                android:textSize="13sp"
                android:layout_toStartOf="@+id/view"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:fontFamily="@font/museosans_300" />


            <TextView
                android:layout_below="@+id/email_value"
                android:textColor="@color/black"
                android:id="@+id/doj"
                android:layout_toEndOf="@+id/view"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Joining :"
                android:textSize="15sp"
                android:fontFamily="@font/museosans_500" />


            <TextView
                android:id="@+id/dojvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doj"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="--"
                android:textSize="13sp"
                android:layout_toEndOf="@+id/view"
                android:gravity="left|center"
                android:fontFamily="@font/museosans_300" />

            <TextView
                android:layout_below="@+id/emp_code"
                android:textColor="@color/black"
                android:id="@+id/unit"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unit :"
                android:textSize="15sp"
                android:fontFamily="@font/museosans_500" />


            <TextView
                android:id="@+id/unit_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unit"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="--"
                android:textSize="13sp"
                android:layout_toEndOf="@+id/view"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:fontFamily="@font/museosans_300" />


            <TextView
                android:layout_below="@+id/unit_value"
                android:textColor="@color/black"
                android:id="@+id/dept"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department Name :"
                android:textSize="15sp"
                android:fontFamily="@font/museosans_500" />


            <TextView
                android:id="@+id/deptName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dept"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="--"
                android:textSize="13sp"
                android:layout_toEndOf="@+id/view"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:fontFamily="@font/museosans_300" />


            <TextView
                android:layout_below="@+id/deptName"
                android:textColor="@color/black"
                android:id="@+id/designation"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designation :"
                android:textSize="15sp"
                android:fontFamily="@font/museosans_500" />


            <TextView
                android:id="@+id/designation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/designation"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="--"
                android:textSize="13sp"
                android:layout_toEndOf="@+id/view"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:fontFamily="@font/museosans_300" />


            <TextView
                android:layout_below="@+id/designation_name"
                android:textColor="@color/black"
                android:id="@+id/report"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Reporting Officer Name :"
                android:fontFamily="@font/museosans_500" />


            <TextView
                android:id="@+id/reportOfcrName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="--"
                android:textSize="13sp"
                android:layout_toEndOf="@+id/view"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:fontFamily="@font/museosans_300" />


            <TextView
                android:layout_below="@+id/reportOfcrName"
                android:textColor="@color/black"
                android:id="@+id/deputedunit"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deputed Unit :"
                android:textSize="15sp"
                android:visibility="gone"
                android:fontFamily="@font/museosans_500" />


            <TextView
                android:visibility="gone"
                android:id="@+id/deputedunit_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deputedunit"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="--"
                android:textSize="13sp"
                android:layout_toEndOf="@+id/view"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:fontFamily="@font/museosans_300" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>