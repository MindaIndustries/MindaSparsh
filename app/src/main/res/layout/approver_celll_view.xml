<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_bg">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/tv_s_no"
                style="@style/content_style"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:text="S.No" />

            <TextView
                android:id="@+id/tv_approved_by_emp_code"
                style="@style/content_style"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/tv_approved_by_name"
                style="@style/content_style"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/tv_approved_status"
                style="@style/content_style"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/tv_approval_level"
                style="@style/content_style"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/tv_approval_request_on"
                style="@style/content_style"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/tv_approval_on"
                style="@style/content_style"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/tv_remarks"
                style="@style/content_style"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/border" />


        </TableRow>


    </TableLayout>
</LinearLayout>