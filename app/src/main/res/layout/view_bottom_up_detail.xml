<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/view"
                android:layout_centerInParent="true"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <TextView
                android:visibility="gone"
                android:fontFamily="@font/museosans_500"
                android:id="@+id/heading"
                android:textSize="18sp"
                android:text="Bottom-up Concern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/concern_no"
                android:text="Concern No :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/concern_no_value"
                android:layout_below="@+id/heading"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="-20dp"
                android:layout_toRightOf="@+id/view"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                >
            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#414042"
                android:layout_below="@+id/concern_no_value"
                android:orientation="horizontal"
                android:id="@+id/ll9"></LinearLayout>


            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/concern_date"
                android:text="Raised Date :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/ll9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/concern_date_spinner"
                android:layout_below="@+id/ll9"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="-20dp"
                android:layout_toRightOf="@+id/view"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                >
            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#414042"
                android:layout_below="@+id/concern_date"
                android:orientation="horizontal"
                android:id="@+id/ll1"></LinearLayout>


            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/unit"
                android:text="Unit :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/unit_spinner"
                android:layout_below="@+id/ll1"
                android:layout_marginLeft="-20dp"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/view"
                android:layout_height="wrap_content"
                android:padding="5dp"
                ></TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#414042"
                android:layout_below="@+id/unit"
                android:orientation="horizontal"
                android:id="@+id/ll2"></LinearLayout>

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/responsible"
                android:text="Department :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/ll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/responsible_spinner"
                android:layout_below="@+id/ll2"
                android:layout_marginLeft="-20dp"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/view"
                android:layout_height="wrap_content"
                android:padding="5dp"
                ></TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#414042"
                android:layout_below="@+id/responsible"
                android:orientation="horizontal"
                android:id="@+id/ll3"></LinearLayout>



            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/raisedby"
                android:text="Raised By :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/ll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/raisedbyvalue"
                android:layout_below="@+id/ll3"
                android:layout_marginLeft="-20dp"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/view"
                android:layout_height="wrap_content"
                android:padding="5dp"
                ></TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#414042"
                android:layout_below="@+id/raisedby"
                android:orientation="horizontal"
                android:id="@+id/ll7"></LinearLayout>


            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/status"
                android:text="Status :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/ll7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/status_value"
                android:layout_below="@+id/ll7"
                android:layout_marginLeft="-20dp"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/view"
                android:layout_height="wrap_content"
                android:padding="5dp"
                ></TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#414042"
                android:layout_below="@+id/status"
                android:orientation="horizontal"
                android:id="@+id/ll8"></LinearLayout>



            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/msm_reference"
                android:text="MSM/Reference :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/ll8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/msm_reference_value"
                android:layout_below="@+id/msm_reference"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cardview_bg"
                android:padding="5dp"
                ></TextView>


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/existing_system"
                android:text="Existing System :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/msm_reference_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/existing_system_value"
                android:layout_below="@+id/existing_system"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:background="@drawable/cardview_bg"
                ></TextView>


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/proposed_system"
                android:text="Proposed System"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/existing_system_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/proposed_system_value"
                android:layout_below="@+id/proposed_system"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:background="@drawable/cardview_bg"
                ></TextView>



            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/benefit"
                android:text="Benefit :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_300"
                android:layout_below="@+id/proposed_system_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/benefit_value"
                android:layout_below="@+id/benefit"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:background="@drawable/cardview_bg"
                ></TextView>


        </RelativeLayout>



    </ScrollView>


</RelativeLayout>