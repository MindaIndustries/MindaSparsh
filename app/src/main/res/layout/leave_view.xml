<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        android:id="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

        <TextView
            android:text="Request No."
            android:layout_toLeftOf="@+id/view"
            android:id="@+id/req_no"
            android:fontFamily="@font/museosans_700"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@+id/view"
            android:id="@+id/req_no_value"
            android:fontFamily="@font/museosans_500"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Name"
            android:layout_below="@+id/req_no"
            android:layout_toLeftOf="@+id/view"
            android:id="@+id/name"
            android:fontFamily="@font/museosans_700"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/req_no_value"
            android:layout_toRightOf="@+id/view"
            android:id="@+id/name_value"
            android:fontFamily="@font/museosans_500"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Emp No."
            android:fontFamily="@font/museosans_700"
            android:textSize="16sp"
            android:layout_below="@+id/name"
            android:layout_toLeftOf="@+id/view"
            android:id="@+id/emp_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/name_value"
            android:layout_toRightOf="@+id/view"
            android:id="@+id/emp_no_value"
            android:fontFamily="@font/museosans_500"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Leave Type"
            android:fontFamily="@font/museosans_700"
            android:textSize="16sp"
            android:layout_below="@+id/emp_no"
            android:layout_toLeftOf="@+id/view"
            android:id="@+id/leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/emp_no_value"
            android:layout_toRightOf="@+id/view"
            android:fontFamily="@font/museosans_500"
            android:textSize="16sp"
            android:id="@+id/leave_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Available Balance"
            android:fontFamily="@font/museosans_700"
            android:textSize="16sp"
            android:layout_below="@+id/leave_type"
            android:layout_toLeftOf="@+id/view"
            android:id="@+id/available_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/leave_type_value"
            android:layout_toRightOf="@+id/view"
            android:fontFamily="@font/museosans_500"
            android:textSize="16sp"
            android:id="@+id/available_bal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="No. of Days"
            android:fontFamily="@font/museosans_700"
            android:textSize="16sp"
            android:layout_below="@+id/available_bal"
            android:layout_toLeftOf="@+id/view"
            android:id="@+id/no_of_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/available_bal_value"
            android:layout_toRightOf="@+id/view"
            android:fontFamily="@font/museosans_500"
            android:textSize="16sp"
            android:id="@+id/no_of_days_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Remarks"
            android:fontFamily="@font/museosans_700"
            android:textSize="16sp"
            android:layout_below="@+id/no_of_days"
            android:layout_toLeftOf="@+id/view"
            android:id="@+id/remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/no_of_days_value"
            android:layout_toRightOf="@+id/view"
            android:fontFamily="@font/museosans_500"
            android:textSize="16sp"
            android:id="@+id/remarks_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Status"
            android:fontFamily="@font/museosans_700"
            android:textSize="16sp"
            android:layout_below="@+id/remarks_value"
            android:layout_toLeftOf="@+id/view"
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/remarks_value"
            android:layout_toRightOf="@+id/view"
            android:id="@+id/status_value"
            android:fontFamily="@font/museosans_500"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Approved By"
            android:fontFamily="@font/museosans_700"
            android:textSize="16sp"
            android:layout_below="@+id/status_value"
            android:layout_toLeftOf="@+id/view"
            android:id="@+id/approved_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/status_value"
            android:layout_toRightOf="@+id/view"
            android:fontFamily="@font/museosans_500"
            android:textSize="16sp"
            android:id="@+id/approved_by_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>