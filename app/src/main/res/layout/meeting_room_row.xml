<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/room_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/museosans_700"
                android:text="Room1"
                android:gravity="left"
                android:layout_toLeftOf="@+id/book"
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/chair"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/room_name"
                android:src="@drawable/chair1"
                app:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/room_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/chair"
                android:src="@drawable/ac"
                android:layout_marginLeft="5dp"
                app:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/room_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ac"
                android:src="@drawable/wifi"
                app:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/mike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/room_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/wifi"
                android:src="@drawable/mic"
                app:tint="@color/colorPrimary" />
            <ImageView
                android:id="@+id/wb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/room_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/mike"
                android:src="@drawable/wb"
                android:layout_marginLeft="5dp"
                app:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/projector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/room_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/wb"
                android:src="@drawable/projector"
                app:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/vc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/room_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/projector"
                android:src="@drawable/vc"
                app:tint="@color/colorPrimary" />


            <android.widget.Button
                android:id="@+id/book"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/museosans_700"
                android:text="BOOK"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_below="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</RelativeLayout>