<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg">

    <RelativeLayout
        android:layout_above="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:id="@+id/logo"
            android:src="@drawable/unomindanewlogo" />

        <TextView
            android:id="@+id/headertextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/logo"
            android:padding="12dp"
            android:text="Daily Work Management----Plant Head"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/customerSpinnerLayout0"
            style="@style/edittext"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/headertextview"
            android:hint="Select Date *">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:focusedByDefault="true"
                android:gravity="left"
                android:hint=""
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:drawableRight="@drawable/calendar"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:padding="2dp"
            android:layout_alignTop="@+id/headertextview"
            android:layout_alignBottom="@+id/headertextview"
            android:layout_toRightOf="@+id/customerSpinnerLayout0"
            android:textColor="@color/lightblue"
            android:textSize="10sp"
            android:text=""
            android:gravity="center"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_below="@+id/headertextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:background="@drawable/rectanglebac"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="S.No"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FF000000" />


            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="Check Point"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FF000000" />


            <TextView
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="Frq."
                android:textSize="10sp"
                android:textStyle="bold" />
            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#FF000000" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Time / Event"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FF000000" />
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Hrs."
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FF000000" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Time \n(In Hrs.)"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FF000000" />

                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="M"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="#FF000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Q"
                    android:textSize="10sp"
                    android:textStyle="bold"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="#FF000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="HY/Y"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>



            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FF000000" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="% Total Time"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FF000000" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Enter Time"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FF000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Enter Remark"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
           </HorizontalScrollView>


        </RelativeLayout>
    <android.widget.Button
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_btn_bg1"
        android:textColor="@color/white"
        android:text="Submit"
        android:textSize="10sp"
        android:textStyle="bold" />


</RelativeLayout>