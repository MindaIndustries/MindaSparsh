<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <View
                android:id="@+id/view"
                android:layout_width="2dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/obs_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/museosans_700"
                android:text="Unsafe Act"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/edit" />

            <TextView
                android:id="@+id/act_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/obs_type"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/museosans_500"
                android:text="Act No. :" />

            <TextView
                android:id="@+id/act_no_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/obs_type"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/view"
                android:fontFamily="@font/museosans_300"
                android:text=""

                />

            <TextView
                android:id="@+id/obs_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_no_value"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/museosans_500"
                android:text="Observation Date :"

                />

            <TextView
                android:id="@+id/obs_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_no_value"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/view"
                android:fontFamily="@font/museosans_300"
                android:text="" />

            <TextView
                android:id="@+id/raised_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/obs_date_value"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/museosans_500"
                android:text="Raised On :" />

            <TextView
                android:id="@+id/raised_on_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/obs_date_value"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/view"
                android:fontFamily="@font/museosans_300"
                android:text="" />

            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raised_on_value"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/museosans_500"
                android:text="Unit :" />

            <TextView
                android:id="@+id/unit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raised_on_value"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/view"
                android:fontFamily="@font/museosans_300"
                android:text="" />

            <TextView
                android:id="@+id/identified_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unit_value"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/museosans_500"
                android:text="Identified Location :" />

            <TextView
                android:id="@+id/identified_loc_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unit_value"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/view"
                android:fontFamily="@font/museosans_300"
                android:text="" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/identified_loc_value"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/museosans_500"
                android:text="Category :"

                />

            <TextView
                android:id="@+id/category_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/identified_loc_value"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/view"
                android:fontFamily="@font/museosans_300"
                android:text="" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_value"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/museosans_500"
                android:text="Status :"

                />

            <TextView
                android:id="@+id/status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_value"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/view"
                android:fontFamily="@font/museosans_300"
                android:text=""

                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>