<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/birds" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translucent" />

    </RelativeLayout>


    <RelativeLayout
        android:padding="20dp"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_above="@+id/add_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/header"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="Ticket No."
                    android:background="@drawable/border"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Emp Name"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:textSize="12sp"

                    />
                <TextView
                    android:textSize="12sp"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Remark"
                    android:background="@drawable/border"

                    />
                <TextView
                    android:textSize="12sp"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Status"
                    android:background="@drawable/border"

                    />
                <TextView
                    android:textSize="12sp"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Created On."
                    android:background="@drawable/border"

                    />




            </LinearLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tkt_history"
            />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/add_remark"
            android:text="Add Remark :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_above="@+id/remark_et"
            android:fontFamily="@font/museosans_300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/remark_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/cardview_bg"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:scrollbars="vertical"
            android:gravity="left|top"
            android:hint="Enter Description here"
            android:overScrollMode="always"
            android:padding="5dp"
            android:layout_above="@+id/update"
            />


        <Button
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:text="Update"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg" />



    </RelativeLayout>



</RelativeLayout>