<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view"
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:fontFamily="@font/museosans_500"
            android:id="@+id/heading"
            android:textSize="18sp"
            android:text="Unsafe Act/Unsafe Condition/ Near Miss /	Accident Reporting Form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/obs_date"
            android:text="Observation Date :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/obs_date_spinner"
            android:layout_below="@+id/heading"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="-20dp"
            android:layout_toRightOf="@+id/view"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:drawableRight="@drawable/downward_arrow"
            ></TextView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#414042"
            android:layout_below="@+id/obs_date"
            android:orientation="horizontal"
            android:id="@+id/ll1"></LinearLayout>


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/unit"
            android:text="Unit :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.minda.sparsh.customview.NoDefaultSpinner
            android:layout_marginTop="30dp"
            style="@style/lipstick_spinner_header_style"
            android:id="@+id/unit_spinner"
            android:spinnerMode="dropdown"
            android:popupElevation="6dp"
            android:layout_below="@+id/ll1"
            android:dropDownVerticalOffset="20dp"
            android:layout_marginLeft="-20dp"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/view"
            android:layout_height="wrap_content"
            android:padding="5dp"
            ></com.minda.sparsh.customview.NoDefaultSpinner>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#414042"
            android:layout_below="@+id/unit"
            android:orientation="horizontal"
            android:id="@+id/ll2"></LinearLayout>

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/safety_officer"
            android:text="Safety Officer :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.minda.sparsh.customview.NoDefaultSpinner
            android:layout_marginTop="30dp"
            style="@style/lipstick_spinner_header_style"
            android:id="@+id/safety_officer_spinner"
            android:spinnerMode="dropdown"
            android:popupElevation="6dp"
            android:layout_marginLeft="-20dp"
            android:layout_below="@+id/ll2"
            android:dropDownVerticalOffset="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/view"
            android:layout_height="wrap_content"
            android:padding="5dp"
            ></com.minda.sparsh.customview.NoDefaultSpinner>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#414042"
            android:layout_below="@+id/safety_officer"
            android:orientation="horizontal"
            android:id="@+id/ll4"></LinearLayout>

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/typeofObs"
            android:text="Type of Observation :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/ll4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.minda.sparsh.customview.NoDefaultSpinner
            android:layout_marginTop="30dp"
            style="@style/lipstick_spinner_header_style"
            android:id="@+id/type_spinner"
            android:spinnerMode="dropdown"
            android:popupElevation="6dp"
            android:layout_below="@+id/ll4"
            android:layout_marginLeft="-20dp"
            android:dropDownVerticalOffset="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/view"
            android:layout_height="wrap_content"
            android:padding="5dp"></com.minda.sparsh.customview.NoDefaultSpinner>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#414042"
            android:layout_below="@+id/typeofObs"
            android:orientation="horizontal"
            android:id="@+id/ll3"></LinearLayout>



        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/identified_loc"
            android:text="Identified Location :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/ll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.minda.sparsh.customview.NoDefaultSpinner
            android:layout_marginTop="30dp"
            style="@style/lipstick_spinner_header_style"
            android:id="@+id/identified_loc_spinner"
            android:spinnerMode="dropdown"
            android:popupElevation="6dp"
            android:layout_below="@+id/ll3"
            android:layout_marginLeft="-20dp"
            android:dropDownVerticalOffset="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/view"
            android:padding="5dp"
            android:layout_height="wrap_content"></com.minda.sparsh.customview.NoDefaultSpinner>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#414042"
            android:layout_below="@+id/identified_loc"
            android:orientation="horizontal"
            android:id="@+id/ll5"></LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/category"
            android:text="Category :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/ll5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.minda.sparsh.customview.NoDefaultSpinner
            android:layout_marginTop="30dp"
            style="@style/lipstick_spinner_header_style"
            android:id="@+id/category_spinner"
            android:spinnerMode="dropdown"
            android:popupElevation="6dp"
            android:layout_marginLeft="-20dp"
            android:layout_below="@+id/ll5"
            android:dropDownVerticalOffset="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/view"
            android:padding="5dp"
            android:layout_height="wrap_content"></com.minda.sparsh.customview.NoDefaultSpinner>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#414042"
            android:layout_below="@+id/category"
            android:orientation="horizontal"
            android:id="@+id/ll6"></LinearLayout>


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/sub_category"
            android:text="Sub Category :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/ll6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.minda.sparsh.customview.NoDefaultSpinner
            android:layout_marginTop="30dp"
            style="@style/lipstick_spinner_header_style"
            android:id="@+id/sub_category_spinner"
            android:spinnerMode="dropdown"
            android:popupElevation="6dp"
            android:layout_below="@+id/ll6"
            android:dropDownVerticalOffset="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-20dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/view"
            android:padding="5dp"
            android:layout_height="wrap_content"></com.minda.sparsh.customview.NoDefaultSpinner>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#414042"
            android:layout_below="@+id/sub_category"
            android:orientation="horizontal"
            android:id="@+id/ll7"></LinearLayout>


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/time"
            android:visibility="gone"
            android:text="Time :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/ll7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:id="@+id/time_selector"
            android:layout_below="@+id/ll7"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="-20dp"
            android:layout_toRightOf="@+id/view"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Time"
            android:gravity="center"
            android:drawableRight="@drawable/downward_arrow"
            ></TextView>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#414042"
            android:layout_below="@+id/time"
            android:orientation="horizontal"
            android:id="@+id/ll8"></LinearLayout>


       <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/description"
            android:text="Description :"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/ll8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_marginTop="10dp"
            android:layout_below="@+id/description"
            android:id="@+id/description_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/cardview_bg"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:scrollbars="vertical"
            android:gravity="left|top"
            android:hint="Enter Description here"
            android:overScrollMode="always"
            android:padding="2dp"
            />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/description_et"
            android:src="@drawable/attach"
            android:id="@+id/attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/attachment"
            android:layout_alignTop="@+id/attachment"
            android:layout_below="@+id/description_et"
            android:id="@+id/attachtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/attachment"
            android:text="Add attachment"
            android:gravity="center"
            />


        <ImageView
            android:id="@+id/doc_view"
            android:layout_below="@+id/attachment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="visible"
            />


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/actiontaken"
            android:text="Action Taken :"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:fontFamily="@font/museosans_300"
            android:layout_below="@+id/doc_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/actiontaken"
            android:id="@+id/action_taken_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/cardview_bg"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:scrollbars="vertical"
            android:padding="2dp"
            android:gravity="left|top"
            android:overScrollMode="always"
            />


        <Button
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/reset"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bg"
            android:layout_toLeftOf="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action_taken_et"
            android:text="Reset"
            android:fontFamily="@font/museosans_500"
            />
        <Button
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/submit"
            android:background="@drawable/btn_bg"
            android:layout_toRightOf="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action_taken_et"
            android:text="Submit"
            android:fontFamily="@font/museosans_500"
            />

        <include layout="@layout/progressbar_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


</ScrollView>
</RelativeLayout>