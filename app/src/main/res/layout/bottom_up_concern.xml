<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:visibility="visible"
            app:tabTextColor="@android:color/white"
            app:tabIndicatorColor="@android:color/white"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="#ffffff">

            <android.support.design.widget.TabItem
                android:id="@+id/dashboardscreen_my_car_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Concern"
                />

            <android.support.design.widget.TabItem
                android:id="@+id/dashboardscreen_share_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Concern"
                />

        </android.support.design.widget.TabLayout>

        <RelativeLayout
            android:layout_below="@+id/tablayout"
            android:id="@+id/new_concern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <RelativeLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:id="@+id/view"
                        android:layout_centerInParent="true"
                        android:layout_width="0dp"
                        android:layout_height="1dp"/>
                    <TextView
                        android:fontFamily="@font/museosans_500"
                        android:id="@+id/heading"
                        android:textSize="18sp"
                        android:text="Bottom-up Concern Form"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="30dp"
                        android:id="@+id/concern_date"
                        android:text="Concern Date :"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/museosans_300"
                        android:layout_below="@+id/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="30dp"
                        android:id="@+id/concern_date_spinner"
                        android:layout_below="@+id/heading"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="-20dp"
                        android:layout_toRightOf="@+id/view"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#414042"
                        android:layout_below="@+id/concern_date"
                        android:orientation="horizontal"
                        android:id="@+id/ll1"></LinearLayout>


                    <TextView
                        android:layout_marginTop="30dp"
                        android:id="@+id/unit"
                        android:text="Unit :"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/museosans_300"
                        android:layout_below="@+id/ll1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.minda.sparsh.customview.NoDefaultSpinner
                        android:layout_marginTop="30dp"
                        style="@style/lipstick_spinner_header_style"
                        android:id="@+id/unit_spinner"
                        android:spinnerMode="dropdown"
                        android:popupElevation="6dp"
                        android:layout_below="@+id/ll1"
                        android:dropDownVerticalOffset="20dp"
                        android:layout_marginLeft="-20dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/view"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        ></com.minda.sparsh.customview.NoDefaultSpinner>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#414042"
                        android:layout_below="@+id/unit"
                        android:orientation="horizontal"
                        android:id="@+id/ll2"></LinearLayout>

                    <TextView
                        android:layout_marginTop="30dp"
                        android:id="@+id/responsible"
                        android:text="Responsible 6M :"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/museosans_300"
                        android:layout_below="@+id/ll2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.minda.sparsh.customview.NoDefaultSpinner
                        android:layout_marginTop="30dp"
                        style="@style/lipstick_spinner_header_style"
                        android:id="@+id/responsible_spinner"
                        android:spinnerMode="dropdown"
                        android:popupElevation="6dp"
                        android:layout_below="@+id/ll2"
                        android:dropDownVerticalOffset="20dp"
                        android:layout_marginLeft="-20dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/view"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        ></com.minda.sparsh.customview.NoDefaultSpinner>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#414042"
                        android:layout_below="@+id/responsible"
                        android:orientation="horizontal"
                        android:id="@+id/ll3"></LinearLayout>
                    <TextView
                        android:layout_marginTop="30dp"
                        android:id="@+id/msm_reference"
                        android:text="MSM/Reference :"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/museosans_300"
                        android:layout_below="@+id/ll3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/msm_reference_value"
                        android:layout_below="@+id/msm_reference"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/cardview_bg"
                        android:padding="5dp"
                        ></EditText>


                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/existing_system"
                        android:text="Existing System :"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/museosans_300"
                        android:layout_below="@+id/msm_reference_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/existing_system_value"
                        android:layout_below="@+id/existing_system"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:background="@drawable/cardview_bg"
                        ></EditText>


                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/proposed_system"
                        android:text="Proposed System"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/museosans_300"
                        android:layout_below="@+id/existing_system_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/proposed_system_value"
                        android:layout_below="@+id/proposed_system"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:background="@drawable/cardview_bg"
                        ></EditText>



                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/benefit"
                        android:text="Benefit :"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/museosans_300"
                        android:layout_below="@+id/proposed_system_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/benefit_value"
                        android:layout_below="@+id/benefit"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:background="@drawable/cardview_bg"
                        ></EditText>



                    <Button
                        android:layout_below="@+id/benefit_value"
                        android:layout_marginTop="30dp"
                        android:id="@+id/save"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>



            </ScrollView>



        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/tablayout"
            android:id="@+id/view_concern"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/bottomup_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>