<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="weeks"
        android:id="@+id/heading"
        android:textSize="14sp"
        android:visibility="gone"
        android:fontFamily="@font/museosans_900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_meeting"
        android:text="No meetings"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/museosans_500"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:focusable="true"
        android:descendantFocusability="afterDescendants"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/heading"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/legend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bg_cvp"
                android:fontFamily="@font/museosans_500"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white" />
            <RelativeLayout
                android:padding="10dp"
                android:layout_below="@+id/legend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACE"
                android:textColor="@color/black"
                android:fontFamily="@font/museosans_900"
                />

            <TextView
                android:text="Formal"
                android:fontFamily="@font/museosans_500"
                android:textColor="@color/black"
                android:layout_below="@+id/customer_name"
                android:id="@+id/meeting_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="27-4"
                android:fontFamily="@font/museosans_500"
                android:textColor="@color/black"
                android:layout_below="@+id/meeting_type"
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </RelativeLayout>

            <ImageView
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/edit"
                android:src="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edit"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete_geo"
                android:id="@+id/delete"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>