<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f0f0f0"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:padding="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:padding="20dp"
                            android:background="@drawable/grey_circle_bg"
                            android:src="@drawable/attendance"
                            android:id="@+id/img1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <TextView
                            android:textColor="@color/black"
                            android:fontFamily="@font/museosans_500"
                            android:layout_marginTop="5dp"
                            android:id="@+id/text1"
                            android:gravity="center"
                            android:layout_below="@+id/img1"
                            android:text="Attendance"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/grey_circle1"
                            android:src="@drawable/time_card"
                            android:id="@+id/img2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="20dp"
                            />

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/museosans_500"
                            android:layout_marginTop="5dp"
                            android:id="@+id/text2"
                            android:gravity="center"
                            android:layout_below="@+id/img2"
                            android:text="Time Card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/ll1"
                    android:id="@+id/ll2"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/grey_circle2"
                            android:src="@drawable/holidays"
                            android:id="@+id/img4"
                            android:padding="20dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/museosans_500"
                            android:id="@+id/text4"
                            android:gravity="center"
                            android:layout_below="@+id/img4"
                            android:text="Holidays"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl4"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/grey_circle3"
                            android:src="@drawable/leave_apply"
                            android:id="@+id/img5"
                            android:padding="20dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/museosans_500"
                            android:id="@+id/text5"
                            android:gravity="center"
                            android:layout_below="@+id/img5"
                            android:text="Leave Request &amp; Regularization"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/ll2"
                    android:id="@+id/ll3"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl5"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/leave_card"
                            android:id="@+id/img3"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/grey_circle4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="20dp"
                            />

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/museosans_500"
                            android:layout_marginTop="5dp"
                            android:id="@+id/text3"
                            android:gravity="center"
                            android:layout_below="@+id/img3"
                            android:text="Leave Card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl6"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/grey_circle5"
                            android:src="@drawable/approvals"
                            android:id="@+id/img6"
                            android:padding="20dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/museosans_500"
                            android:id="@+id/text6"
                            android:gravity="center"
                            android:layout_below="@+id/img6"
                            android:text="Approvals"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>
    </ScrollView>
</RelativeLayout>