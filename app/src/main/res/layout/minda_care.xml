<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:visibility="visible"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/birds"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:background="@color/translucent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submit"
        android:fillViewport="true"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize">

            <RelativeLayout
                android:id="@+id/buttons_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <View
                    android:id="@+id/view"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true" />

                <Button
                    android:id="@+id/wfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/view"
                    android:background="@drawable/btn_bg_orange"
                    android:inputType="textCapWords"
                    android:text="Working From Office"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/wfh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view"
                    android:background="@drawable/btn_bg"
                    android:inputType="textCapWords"
                    android:text="Working From Home"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_alignLeft="@+id/wfh"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/wfh"
                    android:visibility="gone"
                    android:id="@+id/time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:id="@+id/clockintime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clock In: "
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_alignLeft="@+id/clockintime"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/clockintime"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/ll1"
                        android:background="@color/black" />

                    <TextView
                        android:layout_alignLeft="@+id/clockintime"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/ll1"
                        android:id="@+id/clockouttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clock Out: "
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_alignLeft="@+id/clockintime"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/clockouttime"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/ll2"
                        android:background="@color/black" />

                    <TextView
                        android:layout_alignLeft="@+id/clockintime"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/ll2"
                        android:id="@+id/totalhr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Working Hour: "
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_alignLeft="@+id/clockintime"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/totalhr"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/ll3"
                        android:background="@color/black" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/map_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/buttons_rl"
                android:visibility="gone">


                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <Button
                    android:id="@+id/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_bg"
                    android:text="CLOCK IN"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <LinearLayout android:layout_below="@+id/map_layout"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rootLayout"
                android:padding="10dp"
                android:layout_marginBottom="80dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".MindacareActivity" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/questions"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map_layout" />


        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg_sbmt"
        android:inputType="textCapWords"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textStyle="bold" />


</RelativeLayout>